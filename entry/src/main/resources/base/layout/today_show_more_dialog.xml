<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="horizontal">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:left_margin="10vp"
        ohos:alignment="center"
        ohos:orientation="vertical">

        <Image
            ohos:id="$+id:test_image"
            ohos:height="60fp"
            ohos:width="60fp"
            ohos:image_src="$media:code"
            ohos:scale_mode="stretch"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="调试"
            ohos:text_size="12fp"
            ohos:text_color="#8B8A87"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:left_margin="10vp"
        ohos:alignment="center"
        ohos:orientation="vertical">

        <Image
            ohos:id="$+id:count_image"
            ohos:height="60fp"
            ohos:width="60fp"
            ohos:image_src="$media:chart_bar"
            ohos:scale_mode="stretch"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="统计"
            ohos:text_size="12fp"
            ohos:text_color="#8B8A87"/>

    </DirectionalLayout>

</DirectionalLayout>