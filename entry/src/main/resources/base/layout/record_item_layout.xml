<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="55vp"
    ohos:width="match_parent"
    ohos:margin="3vp"
    ohos:orientation="vertical"
    ohos:padding="5vp"
    ohos:id="$+id:record_item_layout"
    >
    <Image
        ohos:id="$+id:kind_image"
        ohos:height="40fp"
        ohos:width="40fp"
        ohos:image_src="$media:smile"
        ohos:scale_mode="stretch"
        />
    <Text
        ohos:id="$+id:cate_item"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_top="true"
        ohos:right_of="$id:kind_image"
        ohos:text="奖学金"
        ohos:text_size="18fp"
        />

    <Text
        ohos:id="$+id:record_time"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_bottom="true"
        ohos:right_of="$id:kind_image"
        ohos:bottom_margin="3vp"
        ohos:text_color="#8B8A87"
        ohos:text="18:52"
        ohos:text_size="12fp"
        />

    <Text
        ohos:id="$+id:memo"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_bottom="true"
        ohos:bottom_margin="3vp"
        ohos:right_of="$id:record_time"

        ohos:left_margin="10fp"
        ohos:text="南区食堂2楼"
        ohos:text_color="#8B8A87"
        ohos:text_size="12fp"
        />

    <Text
        ohos:id="$+id:money"
        ohos:top_margin="10vp"
        ohos:right_margin="10fp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_right="true"
        ohos:text="20.00"
        ohos:text_size="20fp"/>
</DependentLayout>
