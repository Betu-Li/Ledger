<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:bottom_margin="10fp"
    ohos:top_margin="10fp"
    ohos:orientation="vertical"
    ohos:background_element="#FCFCFC">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="20vp"
        ohos:top_margin="10vp"
        ohos:text_color="#FF9201"
        ohos:text="分类"
        ohos:text_size="20fp"/>

    <DirectionalLayout
        ohos:top_margin="5fp"
        ohos:height="100fp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        >
        <Picker
            ohos:id="$+id:cateitem_picker"
            ohos:height="match_parent"
            ohos:width="100vp"
            ohos:layout_alignment="center"
            ohos:element_padding="20vp"
            ohos:normal_text_size="16fp"
            ohos:selected_text_size="18fp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="5fp"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal"
        >
        <Button
            ohos:id="$+id:cateitem_ok"
            ohos:height="match_content"
            ohos:width="150fp"
            ohos:text="确定"
            ohos:background_element="#F5A623"
            ohos:text_color="#ffffff"
            ohos:text_size="20fp"
            />
        <Button
            ohos:id="$+id:cateitem_cancel"
            ohos:height="match_content"
            ohos:width="70fp"
            ohos:left_margin="10fp"
            ohos:text_size="20fp"
            ohos:text="取消"
            ohos:background_element="#ECECEE"
            ohos:text_color="#8B8B8A"
            />

    </DirectionalLayout>

</DirectionalLayout>