<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Image
        ohos:height="150fp"
        ohos:width="150fp"
        ohos:layout_alignment="center"
        ohos:scale_mode="stretch"
        ohos:image_src="$media:sr"
        ohos:id="$+id:icon_image"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:left_margin="30fp"
        ohos:width="match_parent"
        ohos:orientation="vertical">


        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:id="$+id:money_text"
            ohos:text="50.00"
            ohos:text_size="20fp"
            ohos:text_color="#000000"/>


            <Text
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:id="$+id:cate_text"
                ohos:text="50.00"
                ohos:text_size="20fp"
                ohos:text_color="#000000"/>


            <Text
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:id="$+id:time_text"
                ohos:text="12：31"
                ohos:text_size="20fp"
                ohos:text_color="#000000"/>


<!--            <Text-->
<!--                ohos:width="match_content"-->
<!--                ohos:height="match_content"-->
<!--                ohos:id="$+id:memo_text"-->
<!--                ohos:text="50.00"-->
<!--                ohos:text_size="20fp"-->
<!--                ohos:text_color="#000000"/>-->


    </DirectionalLayout>


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_alignment="center"
        ohos:left_margin="30fp"
        ohos:padding="20fp">

        <Button
            ohos:id="$+id:btn_ok"
            ohos:height="40fp"
            ohos:width="100fp"
            ohos:text="确定"
            ohos:text_size="20fp"
            ohos:background_element="#F5A623"
            ohos:text_color="#ffffff"/>

        <Button
            ohos:id="$+id:btn_delete"
            ohos:height="40fp"
            ohos:width="100fp"
            ohos:text="删除"
            ohos:text_size="20fp"
            ohos:background_element="#ECECEE"
            ohos:text_color="#8B8B8A"
            ohos:left_margin="20fp"/>

    </DirectionalLayout>

</DirectionalLayout>