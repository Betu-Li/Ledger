    <DirectionalLayout
        ohos:height="150vp"
        ohos:width="match_parent"
        ohos:background_element="$media:bk1">
        <Text
            ohos:text="结余："
            ohos:text_size="18fp"
            ohos:top_margin="35vp"
            ohos:left_margin="15vp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#A8FFFFFF"
            />
        <Text
            ohos:id="$+id:balance_money"
            ohos:text="-8.00"
            ohos:text_size="40fp"
            ohos:left_margin="15vp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#FFFFFF"
            />
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:left_margin="15vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="收入："
                ohos:text_color="#A8FFFFFF"
                ohos:text_size="20fp"
                />
            <Text
                ohos:id="$+id:Input_money"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="500.00"
                ohos:text_color="#FFFFFF"
                ohos:text_size="20fp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text=" | "
                ohos:text_size="20fp"
                ohos:text_color="#A8FFFFFF"
                ohos:right_margin="10vp"
                ohos:left_margin="10vp"
                />

            <Text
                ohos:id="$+id:text1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="支出："
                ohos:text_color="#A8FFFFFF"
                ohos:text_size="20fp"
                />
            <Text
                ohos:id="$+id:Output_money"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="500.00"
                ohos:text_color="#FFFFFF"
                ohos:text_size="20fp"
                />
        </DirectionalLayout>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="10vp"
        ohos:orientation="horizontal"
        >
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="日期："
            ohos:text_size="25fp"
            ohos:id="$+id:conditional_text"/>
        <Text
            ohos:id="$+id:conditional_year_month"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="2vp"
            ohos:text="2024-21"
            ohos:text_color="#8B8A87"
            ohos:text_size="15fp"
            />

    </DirectionalLayout>

