<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:left_padding="20vp"
    ohos:right_padding="20vp">

    <TextField
        ohos:id="$+id:money"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#F0543A"
        ohos:text_size="45fp"
        ohos:top_margin="20vp"
        ohos:hint="0.00"
        ohos:text_input_type="pattern_number"
        ohos:hint_color="#F0543A"
        ohos:multiple_lines="false"
        ohos:basement="#F0543A"
        />

    <DirectionalLayout
        ohos:id="$+id:cateitem_layout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="20fp">
        <Image
            ohos:height="20fp"
            ohos:width="20fp"
            ohos:image_src="$media:fl"
            ohos:scale_mode="stretch"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="分类"
            ohos:text_size="18fp"
            />
        <Text
            ohos:id="$+id:cate_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="生活费"
            ohos:text_size="20fp"
            ohos:left_margin="20fp"
            />

    </DirectionalLayout>
    <DirectionalLayout
        ohos:id="$+id:calener_layout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="20fp">
        <Image
            ohos:height="20fp"
            ohos:width="20fp"
            ohos:image_src="$media:sj"
            ohos:scale_mode="stretch"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="时间"
            ohos:text_size="18fp"
            />
        <Text
            ohos:id="$+id:time_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="2017-12-12 12:30:31"
            ohos:text_size="20fp"
            ohos:left_margin="20fp"
            />

    </DirectionalLayout>
</DirectionalLayout>